@{
	ViewData["Title"] = "Machine Index";
	ViewData["Footer"] = "Views / Machines / Index";
}

@model System.Collections.Generic.List<Factory.Models.Machine>

@using Factory.Models;

<div class="text-center">
	<h1 class="display-4">Machine Index</h1>
</div>

<hr/>

@if (Model.Count() == 0)
{
	<p>No machines have been added yet. </p>
}
else
{
	<table class="table table-bordered table-striped">
		<thead>
		<tr>
			<th>Machine Id:</th>
			<th>Machine Name:</th>
			<th>Description:</th>
			<th>Engineer(s) Assigned:</th>
			<th>Actions</th>
		</tr>
		</thead>
		<tbody>
		@foreach (Machine machine in Model)
		{
			<tr>
				<td>@machine.MachineId</td>
				<td>@Html.ActionLink(@machine.MachineName, "Details", new {id = @machine.MachineId})</td>			
				<td>@machine.Description</td>
				<td>
					@foreach(var join in machine.JoinEntities)
					{
					  <p>@join.Engineer.EngineerName</p>
					}
				</td>
				<td>
					<a class="btn btn-primary" asp-area="" asp-controller="Machines" asp-action="Edit" asp-route-machineId="@machine.MachineId">Edit</a>
					<a class="btn btn-danger" asp-area="" asp-controller="Machines" asp-action="Delete" asp-route-machineId="@machine.MachineId">Delete</a>
				</td>
			</tr>
		}
		</tbody>
	</table>
}
<a class="btn btn-primary" asp-area="" asp-controller="Machines" asp-action="Create">+ Add Machine</a>